{
  "compilerOptions": {
    // Module
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    // JS
    "allowJs": true,
    "checkJs": true,

    // Emit
    "declaration": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Strict
    "strict": true
  },

  "files": ["index.ts"] /* Files to compile */
}
